<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Page - Data Verification</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Test Page - Data Verification</h1>

    <h2>Financial Summaries</h2>
    <pre><%= JSON.stringify(summaries, null, 2) %></pre>

    <h2>Labels</h2>
    <pre><%= JSON.stringify(labels, null, 2) %></pre>

    <h2>Financial Entries</h2>
    <pre><%= JSON.stringify(entries, null, 2) %></pre>

    <h2>Entries Grouped by Labels</h2>
    <ul>
        <% labels.forEach(label => { %>
        <li>
            <strong><%= label.category %> - <%= label.label %> (ID: <%= label.id %>)</strong>
            <ul>
                <% entries.filter(entry => entry.label_id === label.id).forEach(entry => { %>
                    <li>
                        Date: <%= entry.reporting_date %>, Value: <%= entry.value %>
                    </li>
                <% }); %>
            </ul>
        </li>
        <% }); %>
    </ul>

    <h2>Entries with Matching Summaries</h2>
    <ul>
        <% summaries.forEach(summary => { %>
        <li>
            <strong>Summary for End Date: <%= summary.end_date %></strong>
            <ul>
                <% entries.filter(entry => entry.reporting_date === summary.end_date).forEach(entry => { %>
                    <li>
                        Label ID: <%= entry.label_id %>, Value: <%= entry.value %>, Category: <%= entry.category %>, Label: <%= entry.label %>
                    </li>
                <% }); %>
            </ul>
        </li>
        <% }); %>
    </ul>

</body>
</html>
