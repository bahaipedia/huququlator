<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    <%- include('partials/sidebar', { loggedIn: loggedIn }) %>
    <div class="dashboard-page-wrapper">
        <h1 class="dashboard-title">Financial Transactions Dashboard</h1>

        <!-- Dashboard Columns -->
        <div class="dashboard-columns-wrapper">
            <!-- First Column: Accounts -->
            <div class="accounts-section-wrapper">
                <div class="accounts-category">
                    <h2 class="accounts-category-title">Crypto</h2>
                    <ul class="accounts-list">
                        <li class="account-entry">Bitcoin</li>
                        <li class="account-entry">Ethereum</li>
                    </ul>
                </div>

                <div class="accounts-category">
                    <h2 class="accounts-category-title">Checking Accounts</h2>
                    <ul class="accounts-list">
                        <li class="account-entry">Chase</li>
                        <li class="account-entry">Wells Fargo</li>
                    </ul>
                </div>

                <div class="accounts-category">
                    <h2 class="accounts-category-title">Credit Card Debt</h2>
                    <ul class="accounts-list">
                        <li class="account-entry">American Express</li>
                    </ul>
                </div>

                <!-- Add new section button -->
                <button class="add-category-button">Add New Section</button>
            </div>

            <!-- Second Column: Data Input -->
            <div class="values-section-wrapper">
                <div class="values-column">
                    <h2 class="values-column-title">Year 2021</h2>
                    <ul class="values-list">
                        <li class="value-entry"><input type="text" placeholder="Value for Bitcoin"></li>
                        <li class="value-entry"><input type="text" placeholder="Value for Ethereum"></li>
                        <li class="value-entry"><input type="text" placeholder="Value for Chase"></li>
                        <li class="value-entry"><input type="text" placeholder="Value for Wells Fargo"></li>
                        <li class="value-entry"><input type="text" placeholder="Value for American Express"></li>
                    </ul>
                </div>
            </div>

            <!-- Add Year Button -->
            <div class="add-year-button-wrapper">
                <button class="add-year-button">Add a New Year</button>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="summary-section-wrapper">
            <h2 class="summary-section-title">Summary</h2>
            <table class="summary-table">
                <tr>
                    <td>Total Assets:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Total Debts:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Unnecessary Expenses:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Previous Years Huquq Payments:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Summary:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Gold Rate:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Units of Huquq:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Rounded Units:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Payment Due On:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Huquq Payment Owed:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Huquq Payments Made:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Remainder Due:</td>
                    <td><!-- Placeholder --></td>
