<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    <%- include('partials/sidebar', { loggedIn: loggedIn }) %>
    <div class="dashboard-page-container">
        <h1 class="dashboard-header">Financial Transactions Dashboard</h1>

        <div class="main-content">
            <!-- Accounts List Section -->
            <div class="accounts-list-container">
                <!-- Pre-populated account sections -->
                <div class="account-section">
                    <h2 class="account-section-header">Crypto</h2>
                    <ul class="account-list">
                        <li class="account-item">Bitcoin</li>
                        <li class="account-item">Ethereum</li>
                    </ul>
                </div>

                <div class="account-section">
                    <h2 class="account-section-header">Checking Accounts</h2>
                    <ul class="account-list">
                        <li class="account-item">Chase</li>
                        <li class="account-item">Wells Fargo</li>
                    </ul>
                </div>

                <div class="account-section">
                    <h2 class="account-section-header">Credit Card Debt</h2>
                    <ul class="account-list">
                        <li class="account-item">American Express</li>
                    </ul>
                </div>

                <!-- Add new section button -->
                <button class="add-account-section-button">Add New Section</button>
            </div>

            <!-- Summary Section -->
            <div class="summary-container">
                <h2 class="summary-header">Summary</h2>
                <table class="summary-table">
                    <tr>
                        <td>Total Assets:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Total Debts:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Unnecessary Expenses:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Previous Years Huquq Payments:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Summary:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Gold Rate:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Units of Huquq:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Rounded Units:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Payment Due On:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Huquq Payment Owed:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Huquq Payments Made:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                    <tr>
                        <td>Remainder Due:</td>
                        <td><!-- Placeholder --></td>
                    </tr>
                </table>
            </div>
        </div>

        <!-- Add a new year button -->
        <div class="add-year-container">
            <button class="add-year-button">Add a New Year</button>
        </div>
    </div>
</body>
</html>
