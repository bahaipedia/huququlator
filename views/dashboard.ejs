<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Financial Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    <%- include('partials/sidebar', { loggedIn: loggedIn }) %>
    <div class="dashboard-page-wrapper">
        <h1 class="dashboard-title">Financial Transactions Dashboard</h1>

        <!-- Dashboard Table -->
        <div class="dashboard-table-wrapper">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Accounts</th>
                        <th>Year 2021</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Row for Crypto Section -->
                    <tr class="section-row">
                        <td colspan="2" class="section-title">Crypto</td>
                    </tr>
                    <tr>
                        <td>Bitcoin</td>
                        <td><input type="text" placeholder="Enter value"></td>
                    </tr>
                    <tr>
                        <td>Ethereum</td>
                        <td><input type="text" placeholder="Enter value"></td>
                    </tr>

                    <!-- Row for Checking Accounts Section -->
                    <tr class="section-row">
                        <td colspan="2" class="section-title">Checking Accounts</td>
                    </tr>
                    <tr>
                        <td>Chase</td>
                        <td><input type="text" placeholder="Enter value"></td>
                    </tr>
                    <tr>
                        <td>Wells Fargo</td>
                        <td><input type="text" placeholder="Enter value"></td>
                    </tr>

                    <!-- Row for Credit Card Debt Section -->
                    <tr class="section-row">
                        <td colspan="2" class="section-title">Credit Card Debt</td>
                    </tr>
                    <tr>
                        <td>American Express</td>
                        <td><input type="text" placeholder="Enter value"></td>
                    </tr>
                </tbody>
            </table>

            <!-- Add Year Button -->
            <div class="add-year-button-wrapper">
                <button class="add-year-button">Add a New Year</button>
            </div>
        </div>

        <!-- Summary Section -->
        <div class="summary-section-wrapper">
            <h2 class="summary-section-title">Summary</h2>
            <table class="summary-table">
                <tr>
                    <td>Total Assets:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Total Debts:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Unnecessary Expenses:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Previous Years Huquq Payments:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Summary:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Gold Rate:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Units of Huquq:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Rounded Units:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Payment Due On:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Huquq Payment Owed:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Huquq Payments Made:</td>
                    <td><!-- Placeholder --></td>
                </tr>
                <tr>
                    <td>Remainder Due:</td>
                    <td><!-- Placeholder --></td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
